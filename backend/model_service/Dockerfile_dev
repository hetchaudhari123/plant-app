# ---- Single-stage Dockerfile ----
FROM python:3.11.2-slim

WORKDIR /app

# Configure pip timeout
ENV PIP_DEFAULT_TIMEOUT=900

# Install runtime deps
RUN apt-get update && \
    apt-get install -y --no-install-recommends curl && \
    rm -rf /var/lib/apt/lists/*

# Upgrade pip and install CPU-only PyTorch first
RUN pip install --upgrade pip setuptools wheel && \
    pip install --no-cache-dir torch==2.3.0+cpu torchvision==0.18.0+cpu torchaudio==2.3.0+cpu \
        --index-url https://download.pytorch.org/whl/cpu

# Copy application code and requirements file
COPY . .
COPY requirements_without_torch.txt .

# Install the rest of the dependencies from requirements_without_torch.txt
RUN pip install --no-cache-dir -r requirements_without_torch.txt

# Expose port
EXPOSE 8002

# Run the app with Gunicorn + UvicornWorker
CMD ["gunicorn", "-k", "uvicorn.workers.UvicornWorker", "main:app", "--bind", "0.0.0.0:8002", "--workers", "4"]
